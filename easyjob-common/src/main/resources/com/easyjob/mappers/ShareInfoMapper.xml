			</if>
			<if test="query.createUserIdFuzzy!= null  and query.createUserIdFuzzy!=''">
				 and  create_user_id like concat('%', #{query.createUserIdFuzzy}, '%')
			</if>
			<if test="query.createUserNameFuzzy!= null  and query.createUserNameFuzzy!=''">
