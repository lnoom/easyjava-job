		<!--用户密码-->
		<result column="password" property="password"  />
		<!--职位-->
		<result column="position" property="position"  />
		<!--状态:0 禁用 1 启用-->
		<result column="status" property="status"  />
		<!--用户拥有的角色,多个用","隔开-->
		<result column="roles" property="roles"  />
		<!--创建时间-->
